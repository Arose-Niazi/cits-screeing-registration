extends layout

block content
	div(style='text-align: center;')
		if(ID)
			if justView 
				h1 #{ID}
				h1 #{fName} #{lName}
				br
				img(src="Images/QR/"+ID+".png", alt="Not found")
				a(href="Images/QR/"+ID+".png" download="RegistartionPass.png")
					button(class="btn btn-lg btn-primary" style="width:100%")
						i(class="fa fa-download")
						p Download
			else 
				if Arrived 
					div(class="alert alert-dismissible alert-warning")
						button(class="btn-close", data-bs-dismiss="alert")
						span User already in veunue
				else 
					div(class="alert alert-dismissible alert-success")
						button(class="btn-close", data-bs-dismiss="alert")
						span Welcome! User is elegible to enter.
				h1 #{ID}
				h1 #{fName} #{lName}
				br
				img(src="Images/QR/"+ID+".png", alt="Not found")
		else 
			div(class="alert alert-dismissible alert-danger")
				button(class="btn-close", data-bs-dismiss="alert")
				span User not registered
